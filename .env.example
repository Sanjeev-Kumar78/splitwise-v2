# .env.example - copy to .env and fill in your values
DB_NAME=splitwise_v2
DB_USERNAME=postgres
DB_PASSWORD=postgres
# url format is: jdbc:postgresql://<host>:<port>/<database_name>
# When running in Docker, use the DB service hostname 'db'
# DB_URL=jdbc:postgresql://db:5432/splitwise_v2
DB_URL=jdbc:postgresql://localhost:5432/splitwise_v2
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
FRONTEND_URL=http://localhost:3000
JWT_SECRET=your-secret-key-should-be-at-least-256-bits-long-change-this-in-production
JWT_EXPIRY=3600000

# Grafana Configuration
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your_secure_password

# Caddy Domain Configuration
# For local development (HTTP only):
DOMAIN=:80

# For EC2 with HTTPS (update with your current EC2 DNS):
# DOMAIN=ec2-3-144-145-33.us-east-2.compute.amazonaws.com

# For Elastic IP with custom domain:
# DOMAIN=yourdomain.com

# Grafana Root URL (must match DOMAIN)
# For local:
GRAFANA_ROOT_URL=http://localhost/grafana/

# For EC2 with HTTPS:
# GRAFANA_ROOT_URL=https://ec2-3-144-145-33.us-east-2.compute.amazonaws.com/grafana/

# For custom domain:
# GRAFANA_ROOT_URL=https://yourdomain.com/grafana/